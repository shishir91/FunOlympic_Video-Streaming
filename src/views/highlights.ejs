<%- include ("head") %> <%- include ("nav") %>

<div class="mt-5 bg-dark" data-bs-theme="dark">
  <div class="container text-bg-dark">
    <div class="container d-flex">
      <h3 class="m-3 pt-3 h3">Highlights and Replays</h3>
    </div>
    
    <% if(data.length > 0){
      data.forEach((data) =>{%>
    <div class="container d-flex">
      
      <img
      src="/uploads/<%=data.thumbnail%>"
      class="live_image"
      />

      <a href="/videoPlayer?t=<%=data.title%>&d=<%=data.description%>&v=<%=data.video%>" class="text-bg-dark fs-5" style="margin-left: 25px;">
        <span class="h5"><%=data.title%></span>
        <br><br>
        <span class="h6"><%=data.description%></span>
      
      </a>
    </div>
    <%
  });
}%>
  </div>
</div>

<%- include ("footer") %>